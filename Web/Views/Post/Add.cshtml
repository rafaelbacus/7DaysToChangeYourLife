@model Web.ViewModels.Post.AddPostViewModel

<div class="post-add">
    <div class="row">
        <div class="col">
            <h2>Add post</h2>
        </div>
    </div>
    <div class="row">
        <div class="col col-md-8 col-lg-9">
            <form asp-action="Add" asp-controller="Post" asp-anti-forgery="true" method="POST">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control post-editor" placeholder="Start here..."></textarea>
                    <span asp-validation-for="Content"></span>
                </div>
                <partial name="~/Views/Partials/_FormSubmitPartial.cshtml" view-data="ViewData"/>
            </form>
        </div>
    </div>
</div>