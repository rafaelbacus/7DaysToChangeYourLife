@model Web.ViewModels.Post.PostViewModel

<div class="post-detail">
    <div class="row">
        <div class="col-12 d-flex flex-column">
            <h2>@Model.Title</h2>
            <p>@Model.RowCreatedDateTime.ToString("MMM dd, yyyy HH:mm:ss")</p>
            <span>
                @Html.Raw(Model.Content)
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>Comments</h3>
            <textarea class="comment-editor" maxlength="300"></textarea>
            <div class="d-flex justify-content-end align-items-center comment-info">
                <span class="character-count">247/300</span>
                <button class="btn btn-primary" data-id="@Model.Id">Add</button>
            </div>
            @if(Model.Comments == null || Model.Comments.Count() == 0)
            {
                <h4>Be the first to comment!</h4>
            }
            else {
                foreach(var comment in Model.Comments)
                {
                    <partial name="~/Views/Partials/_CommentsPartial.cshtml" model="comment"/>
                }
            }
        </div>
    </div>
</div>