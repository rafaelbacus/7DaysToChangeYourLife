{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Web/Web.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "css",
            "type": "shell",
            "command": "gulp css",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Web"
            },
            "problemMatcher": [
                "$node-sass"
            ]
        }
    ]
}